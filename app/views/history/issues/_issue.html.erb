<% if issue.subject? %>
  <%= label(:issue, :subject) %>
  <%= diff_attribute(issue, :subject) %>
<% end %>

<% if issue.description? %>
  <%= label(:issue, :description) %>
  <%= diff_attribute(issue, :description) %>
<% end %>

<% if issue.due_at? %>
  <%= label(:issue, :due_at) %>
  <%= diff_date_attribute(issue, :due_at) %>
<% end %>

<% if issue.parent? %>
  <%= label(:issue, :parent_id) %>
  <%= diff(issue.from_parent&.subject, issue.to_parent&.subject) %>
<% end %>

<% if issue.assignee? %>
  <%= label(:issue, :assignee_id) %>
  <%= diff(issue.from_assignee&.member&.name, issue.to_assignee&.member&.name) %>
<% end %>

<% if issue.status? %>
  <%= label(:issue, :status) %>
  <%= diff_attribute(issue, :status) %>
<% end %>
