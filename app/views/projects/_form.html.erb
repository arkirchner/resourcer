<%= form_with model: project do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", placeholder: "My new project." %>
  </div>
  <div class="form-group">
    <%= f.label :key %>
    <%= f.text_field :key, class: "form-control", placeholder: "ABC", aria: { describedby: "projectKeyHelp" }, minlength: 3, maxlength: 3 %>
    <small id="projectKeyHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
