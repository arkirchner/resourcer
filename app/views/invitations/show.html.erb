<div class="modal-header">
  <h5 class="modal-title">Invitation URL: <%= current_project.key %><small> - <%= current_project.name %></small></h5>
  <button type="button" class="close" aria-label="Close" data-controller="modal-closer" data-action="modal-closer#close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<div class="modal-body" data-controller="clipboard">
  <h6><%= @invitation.note %></h6>

  <div class="input-group mb-3">
    <input id="invitation-url" type="text" class="form-control" value="<%= join_project_url(@invitation.token) %>" aria-label="Invitation Url" readonly data-target="clipboard.source">
    <div class="input-group-append">
      <button class="btn btn-outline-secondary" type="button" data-action="clipboard#copy">
        <%= inline_svg_tag "@fortawesome/fontawesome-free/svgs/regular/clipboard.svg", class: "svg-icon" %>
        Copy
      </button>
    </div>
  </div>
  <p>Please share this URL to invite a member to the project.</p>
  <p><small>Note: Valid until <%= l(@invitation.invalid_at) %></small></p>
</div>
<div class="modal-footer">
  <button type="button" class="btn btn-secondary" data-controller="modal-closer" data-action="modal-closer#close">Close</button>
</div>
