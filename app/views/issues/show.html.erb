<h1><%= @issue.subject %></h1>
<h2>
  <% if @issue.assignee %>
    Assignee <%= @issue.assignee.name  %>
  <% else %>
    Not assigned.
  <% end %>
</h2>


<div class="card">
  <div class="card-body">
    <div id="description" class="markdown-body">
      <%= markdown_to_html @issue.description %>
    </div>
  </div>
</div>

<%= link_to "Edit", edit_issue_path(@issue) %>

<%= render "childran", { issue: @issue } %>
